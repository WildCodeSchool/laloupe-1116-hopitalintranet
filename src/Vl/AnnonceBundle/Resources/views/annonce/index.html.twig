{% extends 'base.html.twig' %}


{% block body %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblancshow">
            <br>
            <div class="container">
                <h1 class="lienstitre">Liste des petites annonces</h1>
                {% if annonces != null %}

                <div class="row">
                    <div class="col-md-12 ">
                        {% for annonce in annonces %}
                            <div class="row carrelisteannonce">
                                <div class="col-md-5">
                                    <td ><img src="{{ app.request.basepath }}/uploads/{{ annonce.image }}" alt="annonce" class="line_img"></td>
                                </div>
                                <div class="col-md-7">
                                    <div class="row">
                                        <div class="col-md-9 ">
                                            <p class="desc">{{ annonce.titre }}</p>
                                            <td><strong>Auteur : </strong>{{ annonce.auteur }}</td>
                                        </div>
                                        <div class="col-md-2 prixannonce">
                                            <td>{{ annonce.prix }} â‚¬</td>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-12 descriptionannonce">
                                            <td>{{ annonce.description }}</td>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-ofsset-4 col-md-8">
                                            <td>
                                                <a class="btneditannonce" href="{{ path('annonce_show', { 'id': annonce.id }) }}">En savoir plus</a>
                                            </td>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endfor %}
                        {% else %}
                            <h4>Il n'y a pas d'annonces</h4>
                        {% endif %}
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-offset-9 col-md-3 btnajout">
                        <a href="{{ path('annonce_new') }}">Ajouter une annonce</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {# Call jQuery #}
    <script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>
    <!-- Compiled and minified JavaScript -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
{% endblock %}
