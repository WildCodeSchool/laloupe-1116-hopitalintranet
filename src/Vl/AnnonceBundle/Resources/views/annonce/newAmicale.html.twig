{% extends 'base.html.twig' %}

{% block body %}
<div class="row">
    <div class="col-md-offset-2 col-md-8 fondblanc2">
        <h1 class="lienstitrenew">Ajouter une annonce pour les Amicales</h1>
        <br>
        <div class="row">
            <div class="col-md-offset-2 col-md-8 carrenewannonce">
                <div class="row">
                    <div class="col-md-12 imgnewid">

                        <div class="row">
                            {{ form_start(form) }}
                            <div class="row">
                                <div class="input-field col m6 s12">
                                    {{ form_label(form.titre) }}
                                    {{ form_widget(form.titre) }}
                                    {{ form_errors(form.titre) }}
                                </div>
                                <div class="input-field col m6 s12">
                                    {{ form_label(form.auteur) }}
                                    {{ form_widget(form.auteur) }}
                                    {{ form_errors(form.auteur) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="input-field col s6">
                                    {{ form_label(form.description) }}
                                    {{ form_widget(form.description) }}
                                    {{ form_errors(form.description) }}
                                </div>
                                <div class="input-field col s6">
                                    {{ form_label(form.prix) }}
                                    {{ form_widget(form.prix) }}
                                    {{ form_errors(form.prix) }}
                                </div>
                            </div>
                            <div class="row">
                                <div class="file-field input-field">
                                    <span>Choisir l'image de l'annonce</span>
                                    {{ form_widget(form.file) }}
                                    <div class="file-path-wrapper">
                                        <input class="file-path validate" type="text">
                                    </div>
                                    {{ form_errors(form.file) }}
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-offset-5 col-md-2">
                                    <input type="submit" value="Ajouter l'annonce" class="btnnew" />
                                </div>
                            </div>
                            {{ form_end(form) }}
                        </div>


                        <div class="row">
                            <div class="col-md-offset-5 col-md-2">
                                <input type="submit"  href="{{ path('annonce_indexAmicale') }}" value="Retour Ã  la liste des annonces" class="btnnew" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

            {% endblock %}

            {% block javascripts %}
                {{ parent() }}
                {# Call jQuery #}
                <script src="https://code.jquery.com/jquery-3.1.1.js" integrity="sha256-16cdPddA6VdVInumRGo6IbivbERE8p7CQR3HzTBuELA=" crossorigin="anonymous"></script>
                <!-- Compiled and minified JavaScript -->
                <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/0.97.8/js/materialize.min.js"></script>
            {% endblock %}
