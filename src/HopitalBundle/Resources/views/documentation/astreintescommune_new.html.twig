{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblanc">
            <h1 class="lienstitrenew">Création d'une astreintes communes</h1>
            <br>
            <div class="row">
                <div class="col-md-offset-3 col-md-6 carrenewid">
                    <div class="row">
                        <div class="col-md-12 imgnewid">
                            {{ form_start(formCommune) }}
                            {{ form_label(formCommune.communeimg, 'Nommez votre astreinte commune:') }}<br>
                            {{ form_widget(formCommune.communeimg)}}<br>
                            {{ form_label(formCommune.file3, 'Insérez votre Pdf:') }}<br>
                            {{ form_widget(formCommune.file3)}}<br>
                            {{ form_label(formCommune.idcommune, 'Id de votre astreinte commune:') }}<br>
                            {{ form_widget(formCommune.idcommune)}}<br>
                            {{ form_label(formCommune.titlecommune, 'Titre de votre astreinte commune:') }}<br>
                            {{ form_widget(formCommune.titlecommune)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-5 col-md-2">
                            <input type="submit" value="Créer" class="btnnew" />
                        </div>
                    </div>
                    {{ form_end(formCommune) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}