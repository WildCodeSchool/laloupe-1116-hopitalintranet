{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblancshow">
            <h1 class="lienstitre">Modifier les instances </h1>


            <a href="{{ path('documentation_instancesrubrique_new') }}">
                <div class="col-md-12 btn btn-default bloc-categorie">
                    Ajouter une<br> catégorie
                </div>
            </a>
            <a href="{{ path('documentation_instances_new') }}">
                <div class="col-md-12 btn btn-default bloc-categorie">
                    Ajouter une<br> photo
                </div>
            </a>
            <div class="col-md-12">
                <a href="{{ path('documentation_instances_index') }}">Retour à la page</a>
            </div>
            <br><br>
            <div class="row">
                <div class="col-md-6">
                    <table>
                        <tr>
                            <th>Nom de la Rubrique</th>
                            <th>Modifer/Supprimer</th>
                        </tr>
                        {% for rubrique in rubriques %}

                        <tr>

                            <td><p>{{ rubrique.rubrique }}</p></td>
                            <td><a href="{{ path('documentation_instancesrubrique_edit',  {'id': rubrique.id }) }}">Modifier/Supprimer cette rubrique</a></td>

                        </tr>
                        {% endfor %}

                    </table>
                </div>
                <div class="col-md-6">
                    <table>
                        <tr>
                            <th>Nom de la Photo</th>
                            <th>Modifer/Supprimer</th>
                        </tr>
                        {% for instance in instancess %}

                            <tr>

                            <td><p>{{ instance.instances1 }}</p></td>
                            <td><a href="{{ path('documentation_instances_edit',  {'id': instance.id }) }}">Modifier/Supprimer cette rubrique</a></td>
                        </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>

    </div>



{% endblock %}