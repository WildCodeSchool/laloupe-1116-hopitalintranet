                    {{ form_widget(formMedical.medicalimg)}}
                    {{ form_label(formMedical.file2, 'Insérez votre Pdf:', {'file2': {'class': 'file2'}}) }}
                    {{ form_widget(formMedical.file2)}}
                    <br>
                    <input type="submit" class="btn btn-primary btn-lg" value="Créer" />
                    {{ form_end(formMedical) }}
                </div>
            </div>

        </div>
    </div>
{% endblock %}