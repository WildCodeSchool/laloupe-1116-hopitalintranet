{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblanc">
            <h1 class="lienstitre">Création Astreintes médicales</h1>
            <br>
            <div class="row journaux">
                <div class="col-md-4">
                    <br>
                    <br>
                    <br>
                    <br>
                    {{ form_start(formMedical) }}
                    {{ form_label(formMedical.idmedical, 'Id de votre astreinte médicale:', {'idmedical': {'class': 'idmedical'}}) }}
                    {{ form_widget(formMedical.idmedical)}}

                    {{ form_label(formMedical.titlemedical, 'Titre de votre astreinte médicale:', {'titlemedical': {'class': 'titlemedical'}}) }}
                    {{ form_widget(formMedical.titlemedical)}}
