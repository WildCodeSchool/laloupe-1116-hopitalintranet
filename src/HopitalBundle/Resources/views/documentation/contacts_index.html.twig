{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-offset-2  col-md-8 fondblanccontact">

            {% for contacts in contactss %}


                <h1 class="lienstitre">Contacts</h1>
                <br>
                <br>


                <button type="button" class="btn btn-primary contactbtn" data-toggle="modal" data-target="#admModal">Services Administratifs</button>


                <!-- Modal -->
                <div class="modal fade bs-example-modal-lg" id="admModal" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                    <div class="modal-dialog modal-lg" role="document">
                        <div class="modal-content">
                            <div class="modal-body" style="height: 650px">
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                                <div class="modal-body">
                                    <object data="{{ app.request.basepath }}/uploads/{{ contacts.contactsimg1 }}" type="application/pdf" width="100%" height="570px">
                                    </object>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>


                <br>
                <br>


                <button type="button" class="btn btn-primary contactbtn" data-toggle="modal" data-target="#soinModal">Services de Soins</button>


