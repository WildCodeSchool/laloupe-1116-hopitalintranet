{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
    <div class="col-md-offset-2  col-md-8 fondblanc">
    <h1 class="lienstitre">Galerie photos</h1>
        <a href="{{ path('documentation_galeriecategorie_new') }}">
            <div class="col-xs-12 col-sm-6 col-md-4 col-lg-3 btn btn-default bloc-categorie">
