                </table>
            </div>
            <div class="col-md-6">
                <table>
                    <tr>
                        <th>Nom de la Photo</th>
                        <th>Modifer/Supprimer</th>
                    </tr>
                    {% for galerie in galeries %}

                        <tr>

                            <td><p>{{ galerie.galerie1 }}</p></td>
                            <td><a href="{{ path('documentation_galerie_edit',  {'id': galerie.id }) }}">Modifier/Supprimer cette rubrique</a></td>
                        </tr>
                    {% endfor %}

                </table>
            </div>
        </div>
        </div>
    </div>



