{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblancshow">
            <h1 class="lienstitre">Modifier les basedoc </h1>


            <a href="{{ path('documentation_basedocoption_new') }}">
                <div class="col-md-12 btn btn-default bloc-categorie">
                    Ajouter une<br> catégorie
                </div>
            </a>
            <a href="{{ path('documentation_basedoc_new') }}">
                <div class="col-md-12 btn btn-default bloc-categorie">
                    Ajouter une<br> photo
                </div>
            </a>
            <div class="col-md-12">
                <a href="{{ path('documentation_basedoc_index') }}">Retour à la page</a>
            </div>
            <br><br>

            <div class="row">
                <div class="col-md-6">
                    <table>
                        <tr>
                            <th>Nom de la Rubrique</th>
                            <th>Modifer/Supprimer</th>
                        </tr>
                        {% for option in options %}

                            <tr>

                                <td><p>{{ option.division }}</p></td>
                                <td><a href="{{ path('documentation_basedocoption_edit',  {'id': option.id }) }}">Modifier/Supprimer cette option</a></td>

                            </tr>
                        {% endfor %}

                    </table>
                </div>
                <div class="col-md-6">
                    <table>
                        <tr>
                            <th>Nom de la Photo</th>
                            <th>Modifer/Supprimer</th>
                        </tr>
                        {% for basedoc in basedocs %}

                            <tr>

                                <td><p>{{ basedoc.basedocimg }}</p></td>
                                <td><a href="{{ path('documentation_basedoc_edit',  {'id': basedoc.id }) }}">Modifier/Supprimer cette option</a></td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>

    </div>



{% endblock %}