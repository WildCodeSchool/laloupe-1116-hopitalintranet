{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblanc">
            <h1 class="lienstitrenew">Ajout d'une direction commune</h1>
            <br>
            <div class="row">
                <div class="col-md-offset-3 col-md-6 carrenewid">
                    <div class="row">
                        <div class="col-md-12 imgnewid">
                            {{ form_start(form) }}
                            {{ form_label(form.directionimg, 'Nommez votre direction commune:') }}<br>
                            {{ form_widget(form.directionimg)}}<br>
                            {{ form_label(form.file1, 'Insérez votre Pdf:') }}<br>
                            {{ form_widget(form.file1)}}<br>
                            {{ form_label(form.iddirection, 'Id de votre direction commune:') }}<br>
                            {{ form_widget(form.iddirection)}}<br>
                            {{ form_label(form.titledirection, 'Titre de votre direction commune:') }}<br>
                            {{ form_widget(form.titledirection)}}
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-offset-5 col-md-2">
                            <input type="submit" value="Créer" class="btnnew" />
                        </div>
                    </div>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}