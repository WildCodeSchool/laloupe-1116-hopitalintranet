{% extends 'base.html.twig' %}


{% block body %}

    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblanc">
            <div class="row">
                <div class="col-md-12">
                    <h1 class="lienstitre">Menus</h1>
                </div>
            </div>
            <div class="row">
                <!--Début archives menus-->
                <div class="col-md-2">
                    <!--Début nouveaux menus-->
                    <div class="col-md-5">
                        {% set maxId = 0 %}
                        {% for menu in menus %}
                            {% set maxId = max(menu.id, maxId) %}
                        {% endfor %}
                        {% for menu in menus %}
                            {% if menu.id == maxId %}
                                <p type="button" data-toggle="modal" data-target="{{ '#' ~ menu.idmenu1 }}">{{ menu.titlemenu1 }}</p>
                            {% endif %}
                            {% if menu.id == maxId %}
                                <object data="{{ app.request.basepath }}/uploads/{{ menu.menu1img }}" type="application/pdf" class="astreintesimg">
                                </object>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col-md-5">
                        {% set maxId = 0 %}
                        {% for menu in menus %}
                            {% set maxId = max(menu.id, maxId) %}
                        {% endfor %}
                        {% for menu in menus %}
                            {% if menu.id == maxId %}
                                <p type="button" data-toggle="modal" data-target="{{ '#' ~ menu.idmenu2 }}">{{ menu.titlemenu2 }}</p>
                            {% endif %}
                            {% if menu.id == maxId %}
                                <object data="{{ app.request.basepath }}/uploads/{{ menu.menu2img }}" type="application/pdf" class="astreintesimg">
                                </object>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-offset-2 col-md-5">
                        {% set maxId = 0 %}
                        {% for menu in menus %}
                            {% set maxId = max(menu.id, maxId) %}
                        {% endfor %}
                        {% for menu in menus %}
                            {% if menu.id == maxId %}
                                <p type="button" data-toggle="modal" data-target="{{ '#' ~ menu.idmenu3 }}">{{ menu.titlemenu3 }}</p>
                            {% endif %}
                            {% if menu.id == maxId %}
                                <object data="{{ app.request.basepath }}/uploads/{{ menu.menu3img }}" type="application/pdf" class="astreintesimg">
                                </object>
                            {% endif %}
                        {% endfor %}
                    </div>
                    <div class="col-md-5">
                        {% set maxId = 0 %}
                        {% for menu in menus %}
                            {% set maxId = max(menu.id, maxId) %}
                        {% endfor %}
                        {% for menu in menus %}
                            {% if menu.id == maxId %}
                                <p type="button" data-toggle="modal" data-target="{{ '#' ~ menu.idmenu4 }}">{{ menu.titlemenu4 }}</p>
                            {% endif %}
                            {% if menu.id == maxId %}
                                <object data="{{ app.request.basepath }}/uploads/{{ menu.menu4img }}" type="application/pdf" class="astreintesimg">
                                </object>
                            {% endif %}
                        {% endfor %}
                    </div>
                </div>
            </div>
            <!--Fin nouveaux menus-->
            <!-- Button trigger modal -->
            <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target=".bs-example-modal-lg">
                Menus de remplacement
            </button>

            <!-- Modal -->
            <div class="modal fade bs-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-body" style="height: 650px">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>

                            {#
                                                    <object data="{{ app.request.basepath }}/uploads/{{ menu.menuimgrempl }}" type="application/pdf" class="menuremplacepdf">
                                                    </object>
                            #}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}