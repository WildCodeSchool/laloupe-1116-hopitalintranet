{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblanc">
            <h1 class="lienstitre">Modifier un ANESM</h1>
            <br>
            {{ form_start(edit_form) }}

            <div class="row journaux">
                <div class="col-md-4">
                    <br>
                    <br>
                    <br>
                    <br>


                    <div>
                        {{ form_label(edit_form.anesmtitle, 'Titre de votre lien:', {'anesmtitle': {'class': 'anesmtitle'}}) }}
                        {{ form_widget(edit_form.anesmtitle) }}
                        {{ form_errors(edit_form.anesmtitle) }}
                        {{ form_label(edit_form.anesmimg, 'Description de votre lien:', {'anesmdescription': {'class': 'anesmdescription'}}) }}
                        {{ form_widget(edit_form.anesmdescription) }}
                        {{ form_errors(edit_form.anesmdescription) }}

                        {{ form_label(edit_form.anesmimg, 'Renommez votre image:', {'anesmimg': {'class': 'anesmimg'}}) }}

                        {{ edit_form.children.file1.vars.label }}

                        {{ form_widget(edit_form.anesmimg) }}
                        {{ form_errors(edit_form.anesmimg) }}
                        {{ form_label(edit_form.file1, 'Ins√©rez votre image:', {'file1': {'class': 'file1'}}) }}
                        {{ form_widget(edit_form.file1) }}
                        {{ form_errors(edit_form.file1) }}
                        {{ form_label(edit_form.anesmurl, 'Url de votre lien:', {'anesmurl': {'class': 'anesmurl'}}) }}
                        {{ form_widget(edit_form.anesmurl) }}
                        {{ form_errors(edit_form.anesmurl) }}
                        <input type="submit" class="btn btn-primary btn-lg" value="Modifier"/>

                        {{ form_end(edit_form) }}

                        {{ form_start(anesm_delete_form) }}
                        <input type="submit" class="btn btn-primary btn-lg" value="Supprimer">
                        {{ form_end(anesm_delete_form) }}
                    </div>
                </div>
            </div>
        </div>

    </div>
{% endblock %}
