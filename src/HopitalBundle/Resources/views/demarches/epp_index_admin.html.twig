{% extends 'base.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-md-offset-2 col-md-8 fondblancshow">
            <h1 class="lienstitre">Modifier les epp </h1>


            <a href="{{ path('demarches_epprubrique_new') }}">
                <div class="col-md-12 btn btn-default bloc-categorie">
                    Ajouter une<br> catégorie
                </div>
            </a>
            <a href="{{ path('demarches_epp_new') }}">
                <div class="col-md-12 btn btn-default bloc-categorie">
                    Ajouter une<br> photo
                </div>
            </a>
            <div class="col-md-12">
                <a href="{{ path('demarches_epp_index') }}">Retour à la page</a>
            </div>
            <br><br>

            <div class="row">
                <div class="col-md-6">
                    <table>
                        <tr>
                            <th>Nom de la Rubrique</th>
                            <th>Modifer/Supprimer</th>
                        </tr>
                        {% for rubrique in rubriques %}

                            <tr>

                                <td><p>{{ rubrique.rubrique }}</p></td>
                                <td><a href="{{ path('demarches_epprubrique_edit',  {'id': rubrique.id }) }}">Modifier/Supprimer cette rubrique</a></td>

                            </tr>
                        {% endfor %}

                    </table>
                </div>
                <div class="col-md-6">
                    <table>
                        <tr>
                            <th>Nom de la Photo</th>
                            <th>Modifer/Supprimer</th>
                        </tr>
                        {% for epp in epps %}

                            <tr>

                                <td><p>{{ epp.epp1 }}</p></td>
                                <td><a href="{{ path('demarches_epp_edit',  {'id': epp.id }) }}">Modifier/Supprimer cette option</a></td>
                            </tr>
                        {% endfor %}

                    </table>
                </div>
            </div>
        </div>

    </div>



{% endblock %}